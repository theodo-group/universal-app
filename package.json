    "@babel/preset-env": "7.23.6",
    "@babel/preset-typescript": "7.23.3",
    "@types/react": "^18.2.21",
    "@types/react-native": "^0.72.2",
    "eslint": "^8.21.0",
    "eslint-config-universe": "12.0.0",
