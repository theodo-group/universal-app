{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "importHelpers": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "target": "es2020",
    "types": ["node", "jest"],
    "lib": ["dom", "esnext"],
    "jsx": "react-jsx",
    "module": "system",
    "moduleResolution": "node",
    "incremental": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["**/*.ts", "**/*.tsx"]
}
